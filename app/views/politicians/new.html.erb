<h2>Add a Politican</h2>
<%= form_for @politician, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :name, "Full Name: ", class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :party, "Political Party: ", class: "col-sm-2 control-label"  %>
    <div class="col-md-8">
      <%= f.text_field :party, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :current_office, "Current Office: ", class: "col-sm-2 control-label"  %>
    <div class="col-md-8">
      <%= f.text_field :current_office %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :running_for, "Running for: ", class: "col-sm-2 control-label"  %>
    <div class="col-md-8">
      <%= f.text_field :running_for %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :photo_url, "Photo URL: ", class: "col-sm-2 control-label"  %>
    <div class="col-md-8">
      <%= f.text_field :photo_url %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :elect_date, "Election Date: ", class: "col-sm-2 control-label"  %>
    <div class="col-md-8">
      <%= f.date_select :elect_date %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Add Politician", class: "btn btn-default btn-primary"  %>
    </div>
  </div>
<% end %>
